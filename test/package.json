{
  "name": "systemjs-tools-boilerplate",
  "main": "app.js",
  "scripts": {
    "start": "systemjs serve",
    "generate-config": "systemjs generate-config",
    "deploy": "now",
    "postinstall": "yarn run generate-config"
  },
  "dependencies": {
    "systemjs-tools": "^1.4.2"
  },
  "systemjs-tools": {
    "entries": [
      "app.js"
    ],
    "serve": {
      "dir": "public"
    },
    "builder": {
      "configFiles": ["public/jspm.config.js"]
    }
  }
}
